<%- include('layouts/boilerplate') %>
<style>
    /* Background Image */
    .bg-blur {
        background: url('https://images.unsplash.com/photo-1494253188410-ff0cdea5499e?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center/cover;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        filter: blur(5px); /* Blurs the entire background */
        z-index: -1; /* Sends it behind content */
    }

    /* Foreground Content */
    .content {
        position: relative;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        z-index: 1;
    }

    /* Optional: Semi-transparent overlay */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(0, 0, 0, 0.5); /* Dark overlay */
        z-index: 0;
    }

    .custom-btn {
        background: rgb(131,58,180) !important;
        background: linear-gradient(90deg, rgba(131,58,180,1) 0%, rgba(253,29,29,1) 50%, rgba(252,176,69,1) 100%) !important;
        color: white !important;
        border-radius: 20px; 
        padding: 10px 20px; 
        border: none; 
    }

</style>

<!-- Background Image -->
<div class="bg-blur"></div>

<!-- Overlay (Optional) -->
<div class="overlay"></div>

<!-- Landing Page Content -->
<div class="container content">
    <div>
        <h1 class="display-3 fw-bold">ThinkSync</h1>
        <p class="lead">Where thoughts flow into brilliance.</p>
        <div class="row">
            <div class="col">
                <a href="/home" class="btn custom-btn btn-lg w-100">Home</a>
            </div>
        </div>
    </div>
</div>
